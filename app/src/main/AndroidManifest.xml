<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.interactiondemo">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InteractionDemo">
        <activity
            android:name=".TaiwanDrink"
            android:label="@string/title_activity_taiwan_drink"
            android:theme="@style/Theme.InteractionDemo.NoActionBar"></activity>
        <activity
            android:name=".TaiwanRest"
            android:label="@string/title_activity_taiwan_rest"
            android:theme="@style/Theme.InteractionDemo.NoActionBar" />
        <activity
            android:name=".TaipeiDrink"
            android:label="@string/title_activity_taipei_drink"
            android:theme="@style/Theme.InteractionDemo.NoActionBar" />
        <activity
            android:name=".TaipeiRest"
            android:label="@string/title_activity_taipei_rest"
            android:theme="@style/Theme.InteractionDemo.NoActionBar" />
        <activity
            android:name=".Page2"
            android:label="@string/title_activity_page2"
            android:theme="@style/Theme.InteractionDemo.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>